modules = ["python-3.11"]
run = "streamlit run app.py"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
run = ["sh", "-c", "streamlit run app.py"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34901
externalPort = 3000

[[ports]]
localPort = 39591
externalPort = 3002

[[ports]]
localPort = 45701
externalPort = 3003

[[ports]]
localPort = 46731
externalPort = 3001

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0"
waitForPort = 5000
